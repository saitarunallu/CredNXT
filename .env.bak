# CredNXT Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ================================
# JWT CONFIGURATION (REQUIRED)
# ================================
# Generate a secure random string for JWT signing
# You can use: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here

# ================================
# FIREBASE BACKEND CONFIGURATION (REQUIRED)
# ================================
# These are for the Express.js server Firebase Admin SDK
# Get these from Firebase Console > Project Settings > Service Accounts > Generate Private Key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ================================
# FIREBASE FRONTEND CONFIGURATION (REQUIRED)
# ================================
# These are for the React frontend Firebase SDK
# Get these from Firebase Console > Project Settings > General > Your apps > Firebase SDK snippet
VITE_FIREBASE_API_KEY=your-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ================================
# DEPLOYMENT CONFIGURATION (OPTIONAL)
# ================================
# Frontend URL for CORS in production
FRONTEND_URL=https://your-domain.com

# Node environment (automatically set by most platforms)
NODE_ENV=production

# ================================
# DEVELOPMENT CONFIGURATION (OPTIONAL)
# ================================
# Set to 'true' to use production Firebase in development
# Leave empty or 'false' to use Firebase emulators
VITE_FIREBASE_USE_PRODUCTION=true