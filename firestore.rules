rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can access their own data and read basic info of other users for contact lookup
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read basic user info (name, phone) for contact lookup
      allow read: if request.auth != null && resource.data.keys().hasAny(['name', 'phone']);
    }
    
    // Loan offers - users can read offers made to them or by them, and create new offers
    match /offers/{offerId} {
      allow read, write: if request.auth != null && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      // Allow authenticated users to create new offers
      allow create: if request.auth != null && 
        request.resource.data.fromUserId == request.auth.uid;
    }
    
    // Payments - users can access payments they are involved in
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        (resource.data.payerId == request.auth.uid || 
         resource.data.payeeId == request.auth.uid);
    }
    
    // Notifications - users can only see their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // SMS messages - admin only (for logging)
    match /sms_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Audit logs - admin only
    match /audit/{auditId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server can write audit logs
    }
  }
}