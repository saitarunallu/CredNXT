    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-functions": "^6.4.0",
    "firebase-admin": "^13.4.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.0.1",
    "pdfkit": "^0.17.1"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pdfkit": "^0.12.12"
  },
  "private": true
}